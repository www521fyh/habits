.container {
  padding: 20rpx;
  background-color: #F8F7FF;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

page {
  background-color: #F8F7FF;
}

.header {
  background: linear-gradient(135deg, #7B66FF, #9785FF);
  padding: 30rpx;
  border-radius: 20rpx;
  color: white;
  margin-bottom: 20rpx;
  width: 600rpx;
  display: flex;
  flex-direction: column;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: left;
}

.header-content {
  display: flex;
  flex-direction: column;
}

.date-info {
  margin-bottom: 20rpx;
}

.date {
  font-size: 48rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.weekday {
  font-size: 32rpx;
}

.progress-text {
  font-size: 28rpx;
  opacity: 0.9;
}

.habits-list {
  margin-top: 0;
  height: 1500rpx;
}

.habit-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 600rpx;
}

.habit-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.habit-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.habit-info {
  flex: 1;
}

.habit-name {
  font-size: 32rpx;
  margin-bottom: 12rpx;
  color: #333;
}

.frequency-info {
  display: flex;
  gap: 16rpx;
}

.frequency-tag, .progress-tag {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.frequency-tag {
  background-color: #F0F0FF;
  color: #7B66FF;
}

.progress-tag {
  background-color: #FFF0F0;
  color: #FF6B6B;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #7B66FF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.checkbox.checked {
  background: #7B66FF;
}

.add-button {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background: #7B66FF;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 60rpx;
  box-shadow: 0 4rpx 20rpx rgba(123, 102, 255, 0.3);
}

/* 对话框样式 */
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.dialog-content {
  width: 600rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.dialog-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.dialog-title {
  font-size: 32rpx;
  font-weight: 500;
}

.dialog-close {
  font-size: 40rpx;
  color: #999;
  padding: 0 20rpx;
}

.dialog-body {
  padding: 30rpx;
}

.habit-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.frequency-section {
  margin-bottom: 30rpx;
}

.section-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
}

.frequency-options {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.frequency-btn {
  flex: 1;
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
}

.frequency-btn.active {
  background: #7B66FF;
  color: white;
  border-color: #7B66FF;
}

.times-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.time-btn {
  width: 80rpx;
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
}

.time-btn.active {
  background: #7B66FF;
  color: white;
  border-color: #7B66FF;
}

.dialog-footer {
  padding: 20rpx;
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  border-top: 1rpx solid #eee;
}

.btn-cancel, .btn-confirm {
  width: 160rpx;
  height: 70rpx;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.btn-confirm {
  background: #7B66FF;
  color: white;
} 